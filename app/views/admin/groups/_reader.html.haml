- if reader.is_in?(@group)
  %li{:class => "fake_checkbox checked", :id => "reader_#{reader.id}"}
    = link_to_remote reader.name, :url => remove_group_reader_url(@group, reader), :loading => "$('reader_#{reader.id}').addClassName('waiting')", :update => "reader_holder_#{reader.id}"
- else
  %li{:class => "fake_checkbox unchecked", :id => "reader_#{reader.id}"}
    = link_to_remote reader.name, :url => add_group_reader_url(@group, reader), :loading => "$('reader_#{reader.id}').addClassName('waiting')", :update => "reader_holder_#{reader.id}"
