- include_stylesheet 'admin/group'
- include_javascript 'lowpro'
- include_javascript 'admin/group'

%h1
  Group:
  = @group.name

= textilize(@group.description)

%p
  = link_to "Edit group", edit_admin_group_url(@group)
  = link_to "Remove group", remove_admin_group_url(@group)

#group_pages
  %h2
    = @group.name
    pages

  %ul
    = render :partial => 'page', :object => Page.homepage

#group_people
  %h2
    = @group.name
    members
    
    %ul
      - Reader.find(:all).each do |reader|
        %div{:id => "reader_holder_#{reader.id}"}
          = render :partial => 'reader', :object => reader
    
#footnotes
  %p
    The pages selected on the left are only visible to the people selected on the right (unless some other group membership lets them in).
